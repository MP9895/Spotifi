{% extends 'base.html.twig' %}

{% block title %}Hello AlbumsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container text-center col-12 col-md-6 pt-5">
    <h1>Cover des albums</h1>
</div>

    <div class="container">
        <div class="row g-4">
    {% for album in albums %}
            <div class="col-4 zoom">
                <div class="card border-dark border border-4 rounded-3 text-white bg-dark mb-3 text-center">
                    <p>{{ album.nom }} </p>
                    <img src="{{asset('images/album/' ~ album.image)}}" class="card-img-top" style="width:100%;">
                </div>
            </div>
    {% endfor %}
    </div>
        </div>

{% endblock %}
