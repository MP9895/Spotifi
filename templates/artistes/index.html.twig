{% extends 'base.html.twig' %}

{% block title %}Hello ArtistesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container text-center col-12 col-md-6 pt-5">
    <h1>Artistes pr√©sents sur le site</h1>
</div>
    
    <div class="container">
        <div class="row g-4">
    {% for artiste in artistes %}
            <div class="col-5 zoom">
                <div class="card border-dark border border-4 rounded-3 text-white bg-dark mb-3">
                    <p>Nom : {{ artiste.nom }}
                    {% if artiste.photo %} 
                        <img src="{{asset('images/artiste/' ~ artiste.photo)}}" width ="150">
                    {% else %}
                        (Pas de Photo pour cet Artiste!)
                    {% endif %}
                    <a class="btn btn-sm btn-light" href="{{artiste.lienWK}}" target="_blank">Biographie</a></p>
                </div>
            </div>
    {% endfor %}
        </div>
    </div>
{% endblock %}
