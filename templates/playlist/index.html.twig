{% extends 'base.html.twig' %}

{% block title %}Hello PlaylistController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container text-center col-12 col-md-6 pt-5">
    <h1 class="pb-2">Ma playlist</h1>
</div>

    {% for m in playlist %}
        <div class="container text-center col-12 col-md-6 pt-5">
            <p>{{ m.titre }}</p>
            <a class="btn btn-sm btn-secondary" href="{{m.lienYT}}" target="_blank">Lien Youtube</a>
            <a class="btn btn-sm btn-secondary me-md-2" href="{{path('removePlaylist', { 'id' : m.id })}}">Supprimer de la playlist</a>
        </div>
    {% endfor %}

{% endblock %}
